# -*- mode: snippet -*-
# name: go-tcp-server
# key: go-tcp-server
# --

package main

import (
	"fmt"
	"os"
	"net"
)

func main() {
	service := ":$1"

	tcpAddr, err := net.ResolveTCPAddr("tcp", service)
	checkError(err)

	listener, err := net.ListenTCP("tcp", tcpAddr)
	checkError(err)

	for {
		conn, err := listener.Accept()
		if err != nil {
			continue
		}
		
		go handleConn(conn)
	}
	
}

func handleConn(conn net.Conn) {
	defer conn.Close()

	var buf [512]byte
	$2
}

func checkError(err Error) {
	if err != nil {
		fmt.Fprintf(os.Stderr, "Error: %s \n", err)
		os.Exit(1)
	}
}
